
<%- include("partials/header") -%>
<h1>Contact</h1>
<p> <%= contact %>  </p>

<form action="https://formspree.io/f/xqknajnn" method="post">

    <div class="flex-container form-box" >
        <div class="container first">
            <div class="form-group">
                <label for="user">Name : </label>
                <input id="name" type="text" name="user" placeholder="Your Name">
            </div>
            <div class="form-group"> 
                <label for="email">Email : </label>
                <input id="email" type="email" name="user_email" placeholder="Your Email">
            </div>
            <div class="form-group">   
                <label for="subject">Subject : </label>
                <input id="subject" type="text" name="subject" placeholder="Subject">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg contact-btn">Send Your Message</button>
            </div>
        </div>
        <div class="container second">
            <div class="form-group">
                <label for="message">Write your Message below : </label>
            </div>
            <div class="form-group">
                <textarea name="message" id="user_msg" cols="35" rows="10" placeholder="Your Message here..."></textarea>
            </div>
        </div>

    </div>

</form>
<%- include("partials/footer") -%>